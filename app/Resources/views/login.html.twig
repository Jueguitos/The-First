{# app/Resources/views/login.html.twig #}
<html>
  <head>
    <link rel="shortcut icon" href="{{ asset('assets/vendor/assets_template/images/favicon.png') }}" type="image/x-icon" />    <!-- Favicon -->
    <link rel="apple-touch-icon-precomposed" href="{{ asset('assets/vendor/assets_template/images/apple-touch-icon-57-precomposed.png') }}">	<!-- For iPhone -->
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{ asset('assets/vendor/assets_template/images/apple-touch-icon-114-precomposed.png') }}">    <!-- For iPhone 4 Retina display -->
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ asset('assets/vendor/assets_template/images/apple-touch-icon-72-precomposed.png') }}">    <!-- For iPad -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ asset('assets/vendor/assets_template/images/apple-touch-icon-144-precomposed.png') }}">    <!-- For iPad Retina display -->
    <link href="{{ asset('assets/vendor/assets_template/plugins/pace/pace-theme-flash.css') }}" rel="stylesheet" type="text/css" media="screen"/>
    <link href="{{ asset('assets/vendor/assets_template/plugins/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('assets/vendor/assets_template/plugins/bootstrap/css/bootstrap-theme.min.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('assets/vendor/assets_template/fonts/font-awesome/css/font-awesome.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('assets/vendor/assets_template/css/animate.min.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('assets/vendor/assets_template/plugins/icheck/skins/all.css') }}" rel="stylesheet" type="text/css" media="screen"/>
    <link href="{{ asset('assets/vendor/assets_template/css/style.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('assets/vendor/assets_template/css/responsive.css') }}" rel="stylesheet" type="text/css"/>
  </head>
  <body class=" login_page">
    <div class="container-fluid">
      <div class="login-wrapper row">
        <div id="login" class="login loginpage col-lg-offset-4 col-md-offset-3 col-sm-offset-3 col-xs-offset-0 col-xs-12 col-sm-6 col-lg-4">
          {% if error %}
          <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
          {% endif %}
          <form action="{{ path('login') }}" method="post" >
            <p>
              <label for="username">Email <br />
                <input type="text" name="_username" id="username" class="input" value="{{ last_username }}" size="20" /></label>
            </p>
            <p>
              <label for="password">Contraseña<br />
                <input type="password" name="_password" id="password" class="input"  size="20" /></label>
              </p>
              <p class="submit">
                <input type="submit" name="wp-submit" id="wp-submit" class="btn btn-accent btn-block" value="Ingresar" />
              </p>
          </form>
          <p id="nav">
            <a class="pull-left" href="#" title="Password Lost and Found">Olvido su contraseña?</a>
            <a class="pull-right" href="register.html.twig" title="Sign Up">Registrarse</a>
          </p>
        </div>
      </div>
    </div>
  </body>
  <script src="{{ asset('assets/vendor/assets_template/js/jquery-1.11.2.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('assets/vendor/assets_template/js/jquery.easing.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('assets/vendor/assets_template/plugins/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('assets/vendor/assets_template/plugins/pace/pace.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('assets/vendor/assets_template/plugins/perfect-scrollbar/perfect-scrollbar.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('assets/vendor/assets_template/plugins/viewport/viewportchecker.js') }}" type="text/javascript"></script>
  <script src="{{ asset('assets/vendor/assets_template/plugins/icheck/icheck.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('assets/vendor/assets_template/js/scripts.js') }}" type="text/javascript"></script>
</html>
